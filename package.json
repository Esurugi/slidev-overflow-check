{
  "name": "slidev-overflow-check",
  "version": "0.1.0",
  "description": "Automatically detect content overflow in Slidev presentations",
  "main": "dist/index.js",
  "bin": {
    "slidev-overflow-check": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsup && node dist/cli.js",
    "build": "tsup && node -e \"const fs=require('fs'); try{fs.chmodSync('dist/cli.js',0o755)}catch{}\"",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest run tests/__tests__",
    "test:e2e": "vitest run tests/e2e",
    "test:all": "vitest run",
    "test:ui": "vitest --ui",
    "bench:e2e": "tsx tests/perf/e2e-benchmark.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "slidev",
    "overflow",
    "checker",
    "presentation",
    "playwright-cli",
    "testing",
    "accessibility"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.5",
    "prettier": "^3.4.2",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mizuirorivi/slidev-overflow-check.git"
  },
  "bugs": {
    "url": "https://github.com/mizuirorivi/slidev-overflow-check/issues"
  },
  "homepage": "https://github.com/mizuirorivi/slidev-overflow-check#readme"
}
